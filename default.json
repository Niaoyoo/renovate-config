{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "ignoreScripts": true,
  "labels": ["dependencies", "renovate"],
  "timezone": "Asia/Shanghai",
  "prConcurrentLimit": 5,
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "depTypeList": ["peerDependencies"],
      "enabled": false
    },
    {
      "groupName": "test",
      "matchPackageNames": [
        "ts-jest",
        "@nestjs/testing"
      ],
      "enabled": false
    },
    {
      "groupName": "types",
      "matchPackagePrefixes": [
        "@types"
      ]
    },
    {
      "groupName": "ESLint group",
      "matchPackageNames": [
        "eslint",
        "lint-staged",
        "@antfu/eslint-config"
      ],
      "matchPackagePrefixes": [
        "eslint"
      ]
    },
    {
      "matchPackageNames": ["pnpm"],
      "allowedVersions": "9.15.4",
      "rangeStrategy": "pin"
    }
  ],
  "ignorePaths": [
    ".nvmrc",
    ".node-version",
    "packageManager"
  ],
  "ignoreDeps": [
    "node",
    "typescript",
    "vue-tsc",
    "dotenv",
    "husky",
    "rimraf"
  ],
  "postUpdateOptions": [
    "pnpmDedupe"
  ]
}
