{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "ignoreScripts": true,
  "labels": ["dependencies", "renovate"],
  "timezone": "Asia/Shanghai",
  "prConcurrentLimit": 5,
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "depTypeList": ["peerDependencies"],
      "enabled": false
    },
    {
      "matchPackageNames": ["@iconify/json"],
      "matchPackagePatterns": ["^@iconify/"],
      "groupName": "iconify"
    },
    { "groupName": "test", "matchPackageNames": [ "ts-jest", "@nestjs/testing" ], "enabled": false },
    { "groupName": "types", "matchPackageNames": ["@types{/,}**"] },
    {
      "groupName": "ESLint group",
      "matchPackageNames": [
        "eslint",
        "lint-staged",
        "@antfu/eslint-config",
        "eslint{/,}**"
      ]
    },
    {
      "matchPackageNames": ["pnpm"],
      "allowedVersions": "9.15.4",
      "rangeStrategy": "pin"
    }
  ],
  "ignorePaths": [
    ".nvmrc",
    ".node-version",
    "packageManager"
  ],
  "ignoreDeps": [
    "node",
    "typescript",
    "vue-tsc",
    "dotenv",
    "nanoid",
    "husky",
    "rimraf"
  ],
  "postUpdateOptions": [
    "pnpmDedupe"
  ]
}
