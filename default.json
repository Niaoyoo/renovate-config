{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "local>niaoyoo/renovate-config:ignore"
  ],
  "ignoreScripts": true,
  "labels": ["dependencies", "renovate"],
  "timezone": "Asia/Shanghai",
  "rangeStrategy": "bump",
  "schedule": ["after 10pm every weekday", "before 5am every weekday"],
  "packageRules": [
    { "matchDepTypes": ["peerDependencies"], "enabled": false },
    {
      "groupName": "iconify",
      "matchPackageNames": ["^@iconify-json"],
      "labels": ["iconify"]
    },
    {
      "groupName": "Testing Group",
      "matchPackageNames": [
        "ts-jest",
        "vitest",
        "happy-dom",
        "^@vitest",
        "jest",
        "supertest",
        "@types/jest"
      ],
      "labels": ["Testing"]
    },
    {
      "groupName": "Types Group",
      "matchPackageNames": ["^@types"],
      "labels": ["Types"]
    },
    {
      "groupName": "ESLint Group",
      "matchPackageNames": [
        "eslint",
        "lint-staged",
        "@antfu/eslint-config",
        "@nuxt/eslint",
        "@typescript-eslint"
      ],
      "labels": ["ESLint"]
    },
    {
      "groupName": "NuxtJs Group",
      "matchPackageNames": ["^@nuxtjs"],
      "labels": ["NuxtJs"]
    },
    {
      "matchPackageNames": ["pnpm"],
      "allowedVersions": "9.15.4",
      "rangeStrategy": "pin"
    }
  ],
  "postUpdateOptions": ["pnpmDedupe"]
}
