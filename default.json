{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "ignoreScripts": true,
  "labels": ["dependencies", "renovate"],
  "timezone": "Asia/Shanghai",
  "rangeStrategy": "bump",
  "schedule": ["after 10pm every weekday", "before 5am every weekday"],
  "packageRules": [
    { "depTypeList": ["peerDependencies"], "enabled": false },
    {
      "matchPackagePatterns": ["^@iconify-json/"],
      "groupName": "iconify"
    },
    {
      "groupName": "Test group",
      "matchPackageNames": ["ts-jest", "vitest", "happy-dom"],
      "matchPackagePatterns": ["^@vitest/"]
    },
    {
      "groupName": "Types group",
      "matchPackageNames": ["@types{/,}**"]
    },

    {
      "groupName": "ESLint group",
      "matchPackageNames": [
        "eslint",
        "lint-staged",
        "@antfu/eslint-config",
        "@nuxt/eslint",
        "eslint{/,}**"
      ]
    },
    {
      "groupName": "nuxt plugins",
      "matchPackageNames": ["@nuxtjs/"],
      "matchPackagePrefixes": ["@nuxtjs/"]
    },
    {
      "matchPackageNames": ["pnpm"],
      "allowedVersions": "9.15.4",
      "rangeStrategy": "pin"
    }
  ],
  "ignorePaths": [
    ".nvmrc",
    ".node-version",
    "packageManager"
  ],
  "ignoreDeps": [
    "node",
    "typescript",
    "vue-tsc",
    "dotenv",
    "nanoid",
    "husky",
    "rimraf"
  ],
  "postUpdateOptions": [
    "pnpmDedupe"
  ]
}
